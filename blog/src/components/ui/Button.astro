---
interface Props {
  href?: string;
  onClick?: Function;
}
const { href, onClick } = Astro.props;
---

<a
  {...href ? { href } : {}}
  class="inline-block no-underline py-4 px-8 text-xl font-bold bg-yellow-400 text-black border-4 border-black hover:bg-black hover:text-yellow-400 transition-all duration-200 shadow-[6px_6px_0px_0px_black] hover:shadow-[2px_2px_0px_0px_black]"
  role="button"
  {...onClick ? { onClick } : {}}
>
  <span class="no-underline"><slot class="font-bold" /></span>
</a>
