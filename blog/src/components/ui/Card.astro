---
interface Props {
  image: string; // URL for the image
  alt?: string; // Optional alt text for the image
  children?: any; // Rich content passed by Markdoc
}

const { image, alt = "Image", children } = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={image} alt={alt} />
  </div>
  <div class="card-content">
    <slot>{children}</slot>
    <!-- Correctly render children -->
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: row;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.2s;
    margin-bottom: 1.5rem;
  }

  .card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .card-image img {
    width: 100%;
    height: auto;
    max-width: 150px; /* Controls image width */
    object-fit: cover;
  }

  .card-content {
    padding: 16px;
    flex: 1;
  }

  @media (max-width: 768px) {
    .card {
      flex-direction: column; /* Stack image on top of content */
    }

    .card-image img {
      max-width: 100%; /* Full-width image on mobile */
    }
  }
</style>
