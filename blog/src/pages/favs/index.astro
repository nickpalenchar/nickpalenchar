---
import PageMeta from "../../components/PageMeta.astro";
import PageLayout from "../../layouts/PageLayout.astro";
import Intro from "../../components/Intro.astro";
import { SITE_TITLE } from "../../config";
import Button from "../../components/ui/Button.astro";
import B from "src/components/ui/B.astro";
import H1 from "src/components/ui/H1.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <p class="pt-8 mb-8">
      <H1>Favs</H1>
    </p>
    <div class="pt-8 flex flex-wrap gap-2 justify-center mb-16 space-x-2">
      <Button>Fav Books</Button>
      <Button extraClasses={["bg-red-400"]}>Fav Movies</Button>
      <Button extraClasses={["bg-blue-400"]}>Fav Recipes</Button>
      <Button extraClasses={["bg-green-400"]}>Fav Podcasts</Button>
      <Button extraClasses={["bg-gray-300"]}>Fav Articles</Button>
    </div>
  </Fragment>
</PageLayout>
