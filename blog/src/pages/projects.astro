---
import Layout from "../layouts/Layout.astro";
import { projectsPageContent } from "../config";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout seo={projectsPageContent.seo}>
  <!-- Fixed rotated title -->
  <div class="fixed left-16 top-1/2 -translate-y-1/2 z-10 hidden md:block">
    <h1 class="font-black text-9xl transform -rotate-90 whitespace-nowrap origin-left opacity-20 tracking-tighter">
      Projects
    </h1>
  </div>

  <section class="mt-10 max-w-2xl mx-auto px-6 md:pl-20">
    <h1 class="font-bold text-3xl mb-1">Projects</h1>
    <p class="opacity-60 mb-10">{projectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        projectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</Layout>
